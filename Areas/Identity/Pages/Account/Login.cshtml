@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row p-5">
    <div class="col-lg-8 offset-lg-2">
        <div class="login-section">
            <h4 class="text-center">Log-In</h4>
            <hr class="m-5" />
            <section class="mt-5">
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" placeholder="Email" class="form-control customInputs" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="text-right pb-2">
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot Password?</a>
                    </div>
                    <div class="form-group">
                        <input asp-for="Input.Password" placeholder="Password" class="form-control customInputs" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="login-btn btn1 btn-block"><span>Log in</span></button>
                    </div>
                    <div class="form-group">
                        <div class="text-center pb-2 signup">
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don't have Account ? <span> Sign Up</span></a>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
