@model ComaCuras.web.Pages.Shops.DetailsModel

<div class="services-section">
    <div class="container">
        <div class="row">
            @foreach (var item in Model.Services)
            {
                <div class="col-lg-3 col-md-6 mx-auto text-center">
                    <div class="service-box">
                        <div class="card-serviceDisplay">
                            <h4 class="text-center">@item.Name</h4>
                            <div class="service-info-main">
                                <div class="media justify-content-center">
                                    <img class="service-icon" src="/img/dollar.svg" alt="" />
                                    <div class="media-body">
                                        <p class="service-info-head">
                                            Cout :
                                        </p>
                                        <p class="service-info-value">
                                            @item.Cost DH
                                        </p>
                                    </div>
                                </div>
                                <div class="media justify-content-center">
                                    <img class="service-icon" src="~/img/clock.svg" alt="" />
                                    <div class="media-body">
                                        <p class="service-info-head">
                                            Duration :
                                        </p>
                                        <p class="service-info-value">
                                            @item.Duration Min
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>