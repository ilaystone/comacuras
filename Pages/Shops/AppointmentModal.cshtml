@model ComaCuras.web.Pages.Shops.DetailsModel


<div class="row">
    <button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#exampleModal">
        Book a ticket
    </button>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Take your Appointment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <select class="form-control" id="service-picker" asp-items="Model.SelectServicesNames">
                        <option value="" selected>select an option</option>
                    </select>
                    <div id="SelectedAgents"></div>
                    <input class="form-control" id="date-picker" type="date" />
                    <div id="possibleDates"></div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="row">
                    <div class="col">
                        <form method="post">
                            <input type="hidden" asp-for="Appointment.ServiceId" />
                            <input type="hidden" asp-for="Appointment.AgentNumber" />
                            <input type="hidden" asp-for="Appointment.Date" />
                            <input type="hidden" asp-for="Appointment.Start" />
                            <input type="hidden" asp-for="Appointment.End" />
                            <input id="submit-appointment" type="submit" class="btn btn-primary btn-block" value="Check-in" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>